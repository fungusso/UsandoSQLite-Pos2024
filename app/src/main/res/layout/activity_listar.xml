<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListarActivity">

    <TextView

        android:id="@+id/tvSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20sp"
        android:text="@string/saldo"
        android:textColor="#703347" />

    <TextView
        android:id="@+id/etSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvSaldo"
        android:autofillHints=""
        android:ems="10"
        android:minHeight="20sp"
        android:textColorHint="#546E7A"
        app:layout_constraintStart_toEndOf="@+id/tvSaldo" />

    <ListView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/lvPrincipal"
      android:divider="#33B5E5"
      android:dividerHeight="1dp"
      android:drawSelectorOnTop="false"
      android:layout_below="@+id/tvSaldo">

    </ListView>

</RelativeLayout>
